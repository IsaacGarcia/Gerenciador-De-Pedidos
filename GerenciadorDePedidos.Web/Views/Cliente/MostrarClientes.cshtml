<div class="panel panel-default responsive">
    <div class="panel-heading"><b> Painel de Clientes </b></div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nome</th>
            </tr>
        </thead>
        <tbody>
            @foreach (GerenciadorDePedidos.Web.Models.Cliente cliente in this.ViewBag.Clientes)
            {
                <tr>
                    <td>@cliente.Nome  @cliente.NomeFantasia @cliente.Sobrenome</td>
                    <td></td>
                    <td></td>
                    <td>
                        <div class="pull-right">
                            <a href="@Url.Action("Details", new { id = @cliente.Id })"  class="btn btn-info"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></a>
                            @*<td>@Html.ActionLink("Detalhes", "Details", "Cliente", new { id = @cliente.Id }, null)</td>*@
                            <a href="@Url.Action("Edit", new { id = @cliente.Id })"  class="btn btn-warning"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                            @*<td>@Html.ActionLink("Editar", "Edit", "Cliente", new { id = @cliente.Id }, null)</td>*@
                            <a href="@Url.Action("Delete", new { id = @cliente.Id })"  class="btn btn-danger"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                        </div>
                    </td>
                    @*<td>@Html.ActionLink("Deletar", "Delete", "Cliente", new { id = @cliente.Id }, null)</td>*@
                </tr>
            }
