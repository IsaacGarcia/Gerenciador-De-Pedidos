
@{
    ViewBag.Title = "BuscarPorCodigo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>Clientes encontrados</h4>
<hr />
<div class="well">
    @foreach (GerenciadorDePedidos.Web.Models.Cliente cliente in this.ViewBag.Cliente)
    {

            <dl class="dl-horizontal">
                <dt>Nome
                </dt>

                <dd>
                    @cliente.Nome @cliente.Sobrenome
                </dd>

                <dt>CPF
                </dt>

                <dd>
                    @cliente.Cpf
                </dd>

                <dt>Telefone
                </dt>

                <dd>
                    @cliente.Telefone
                </dd>

                <dt>Email
                </dt>

                <dd>
                    @cliente.Email
                </dd>

            </dl>
        <p>
            <a href="@Url.Action("Edit", new { id = @cliente.Id })"  class="btn btn-warning"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
            @*@Html.ActionLink("Editar", "Edit", new { id = cliente.Id })*@
        </p>
    }
</div>

<p>
    <a href="@Url.Action("MostrarClientes")"  class="btn btn-primary">Voltar <span class="glyphicon glyphicon-share-alt" aria-hidden="true"></span></a>
    @*@Html.ActionLink("Back to List", "MostrarClientes")*@
</p>

</div>
<hr />



