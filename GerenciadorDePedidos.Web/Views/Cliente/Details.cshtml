@model GerenciadorDePedidos.Web.Models.Cliente

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><span class="glyphicon glyphicon-sort" aria-hidden="true"></span>Detalhes</h2>

<div class="well" id="@Model.TipoPessoa">
    <h4>Cliente</h4>
    <hr />
    <div id="fisica">
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Sobrenome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Sobrenome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Cpf)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cpf)
            </dd>
        </dl>
    </div>
    <div id="juridica">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.RazaoSocial)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RazaoSocial)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.NomeFantasia)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NomeFantasia)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Cnpj)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cnpj)
            </dd>


        </dl>
    </div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Telefone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

    </dl>
</div>
<p>
    <a href="@Url.Action("Edit", new { id = @Model.Id })"  class="btn btn-warning"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
    @*@Html.ActionLink("Editar", "Edit", new { id = Model.Id }) *@
    <a href="@Url.Action("MostrarClientes")"  class="btn btn-primary"><span class="glyphicon glyphicon-share-alt" aria-hidden="true"></span></a>
    @*@Html.ActionLink("Back to List", "MostrarClientes")*@
</p>

<script type="text/javascript" src="~/Scripts/jquery-1.10.2.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        texto = $('.well').prop('id');

        if (texto == "Juridica") {

            $('#fisica').hide();

        }
        else {
            $('#juridica').hide();

        }

    });

</script>
