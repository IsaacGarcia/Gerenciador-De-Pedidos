@model GerenciadorDePedidos.Web.Models.Produto

@{
    ViewBag.Title = "Index";
}

<h2>Cadastro de Produto</h2>
@using (Html.BeginForm("Salvar", "CadastroDeProduto"))
{
    <div class="row">
        <div class="span4">
            @Html.LabelFor(x => x.Nome)
            @Html.TextBoxFor(x => x.Nome)
        </div>
        <div class="span4">
            @Html.LabelFor(x => x.Valorunitario)
            @Html.TextBoxFor(x => x.Valorunitario)
        </div>
        <div class="span4">
            @Html.LabelFor(x => x.Descricao)
            @Html.TextBoxFor(x => x.Descricao)
        </div>
        <input type="submit" value="Salvar" />
    </div>

 

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Valor Unitario</th>
                <th>Descrição</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (GerenciadorDePedidos.Web.Models.Produto produto in this.ViewBag.Produtos)
            {
                <tr>
                    <td>@produto.Nome</td>
                    <td>@produto.Valorunitario</td>
                    <td>@produto.Descricao</td>
                    <td>@Html.ActionLink("Deletar", "Remover", "CadastroDeProduto", new { Id = @produto.Id }, null)</td>
                    <td>@Html.ActionLink("Edit", "Edit", new { id = @produto.Id }) </td>
                </tr>
               
            }
        </tbody>
    </table>    
}
