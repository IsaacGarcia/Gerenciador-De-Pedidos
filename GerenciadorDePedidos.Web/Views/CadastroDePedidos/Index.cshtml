@model GerenciadorDePedidos.Web.Models.Views.CadastroDePedido

@{
    ViewBag.Title = "Index";
}

<h2>Cadastro de Pedidos</h2>
@using (Html.BeginForm("Adicionar", "CadastroDePedidos"))
{
    <div class="row">
        <div class="span4">
            @Html.LabelFor(x => x.Produtos)
            @Html.DropDownListFor(x=>x.Produtos, new SelectList(Model.Produtos,"Id","Nome"), "Selecione")
        </div>
      
        <input type="submit" value="Salvar" />
    </div>
    
    
    
}

